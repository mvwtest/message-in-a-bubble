<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.tuc.senselab.messageinabubble">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"  />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MessageInABubble">

        <activity
            android:name="gr.tuc.senselab.messageinabubble.activities.LoginActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gr.tuc.senselab.messageinabubble.activities.CreateAccountActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="gr.tuc.senselab.messageinabubble.activities.MapActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="gr.tuc.senselab.messageinabubble.activities.MessageActivity"
            android:label="@string/app_name">
        </activity>
        <service
            android:name="gr.tuc.senselab.messageinabubble.services.XmppConnectionService"
            android:label="@string/app_name">
        </service>
    </application>

</manifest>